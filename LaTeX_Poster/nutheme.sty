    \colorlet{noteframecolor}{colorTwo}
}

% -- STYLE --

% background
\definebackgroundstyle{NUBackgroundStyle}{
    \draw[line width=0pt, color=framecolor, fill=backgroundcolor]
    (bottomleft) rectangle (topright);
}

% title
\definetitlestyle{NUTitleStyle}{
    width=\textwidth, linewidth=5pt, titletotopverticalspace=0in
}{
    \begin{scope}[line width=\titlelinewidth,]
    \draw[color=colorThree,round cap-round cap]
    (\titleposleft,\titleposbottom)--(\titleposright,\titleposbottom);
    \end{scope}
}

% block
\defineblockstyle{NUBlockStyle}{
    titlewidthscale=0.9, bodywidthscale=1, roundedcorners=5
}{
    \draw[color=framecolor, fill=blockbodybgcolor,
    rounded corners=\blockroundedcorners] (blockbody.south west)
    rectangle (blockbody.north east);
    \ifBlockHasTitle
    \draw[color=framecolor, fill=blocktitlebgcolor,
    rounded corners=\blockroundedcorners] (blocktitle.south west)
    rectangle (blocktitle.north east);
    \fi
}

% -- THEME -- 
% NU theme
\definelayouttheme{NUTheme}{
    \usecolorstyle[colorPalette=NUPalette]{NUStyle}
    \usebackgroundstyle{NUBackgroundStyle}
    \usetitlestyle{NUTitleStyle}
    \useblockstyle{NUBlockStyle}
    \useinnerblockstyle{Default}
    \usenotestyle{Default}
}

% -- TITLE FORMAT --

% place logo to right of centered title
\makeatletter
\renewcommand\TP@maketitle{%
   \centering
   \begin{minipage}[b]{0.8\linewidth}
        \centering
        \color{titlefgcolor}
        {\bfseries \Huge \sc \@title \par}
        \vspace*{1em}
        {\huge \@author \par}
        \vspace*{1em}
        {\LARGE \@institute}
    \end{minipage}%
    \tikz[remember picture,overlay]\node[anchor=south east,xshift=0.5\linewidth,inner sep=0pt, yshift=30] {%
       \@titlegraphic
    };
}
\makeatother
